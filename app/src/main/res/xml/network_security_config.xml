<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic for local network -->
        <domain includeSubdomains="false">192.168.1.100</domain>
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>

    <domain-config>
        <!-- SSL configuration for production domain -->
        <domain includeSubdomains="true">track-occupancy.auditory.ru</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- Certificate pinning (uncomment and add pins for production)
    <domain-config>
        <domain includeSubdomains="true">track-occupancy.auditory.ru</domain>
        <pin-set expiration="2025-12-31">
            <pin digest="SHA-256">your_certificate_pin_here</pin>
        </pin-set>
    </domain-config>
    -->
</network-security-config>
